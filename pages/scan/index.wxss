/* pages/scan/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  background-color: #fef9e7;
}

/* 标题 */
.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 介绍文本 */
.description {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 扫码按钮 */
.scan-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  background-color: #ffcc00;
  border-radius: 150rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease-in-out;
}

.scan-box:active {
  transform: scale(0.96);
}

/* 扫码图标 */
.scan-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}

/* 扫码文本 */
.scan-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

/* 计时框 */
.timer-box {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 计时文本 */
.timer-text {
  font-size: 38rpx;
  font-weight: bold;
  color: #d35400;
  margin-bottom: 20rpx;
}

/* 归还按钮 */
.return-btn {
  width: 300rpx;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  background: linear-gradient(to right, #ff9900, #ff6600);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease-in-out;
  margin-bottom: 20rpx;
}

.feedback-btn {
  width: 300rpx;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  background-color: rgb(148, 241, 120);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease-in-out;
}

.return-btn:active, .feedback-btn:active {
  transform: scale(0.96);
}

/* 底部提示 */
.bottom-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 40rpx;
}

/* 结果区域 */
.result-area {
  background-color: white;
  border-radius: 10rpx;
  margin-top: 30rpx;
  padding: 20rpx;
  width: 80%;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.result-title {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-align: center;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  padding: 15rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  word-break: break-all;
}

/* 模拟模式提示 */
.simulation-notice {
  margin-top: 20rpx;
  padding: 10rpx 24rpx;
  background-color: rgba(255, 204, 0, 0.2);
  border: 1rpx solid #ffcc00;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #d35400;
}

.simulation-notice:active {
  background-color: rgba(255, 204, 0, 0.4);
} 