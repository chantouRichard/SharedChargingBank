/* pages/user/index.wxss */
.guide-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 30rpx;
}

.guide-header {
  background: linear-gradient(135deg, #ffcc00, #ff9500);
  color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 204, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.guide-header::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;base64,');
  opacity: 0.6;
  z-index: 0;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.header-desc {
  font-size: 28rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  display: inline-block;
  margin: 0 auto;
}

.guide-content {
  flex: 1;
  padding: 30rpx;
}

.guide-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.guide-item:active {
  transform: translateY(2rpx);
}

.guide-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(to bottom, #ffcc00, #ff9500);
  border-radius: 4rpx 0 0 4rpx;
}

.item-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
}

.item-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 28rpx;
  width: 8rpx;
  background-color: #ffcc00;
  border-radius: 4rpx;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-left: 24rpx;
}

.guide-footer {
  text-align: center;
  padding: 40rpx 0;
  background-color: rgba(255, 204, 0, 0.1);
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.footer-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 60rpx;
  padding: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.footer-text {
  font-size: 28rpx;
  color: #666;
  background-color: rgba(255, 204, 0, 0.2);
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  display: inline-block;
  font-weight: 500;
}