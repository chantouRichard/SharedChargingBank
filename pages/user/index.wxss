/* pages/user/index.wxss */
.guide-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 30rpx;
}

.guide-header {
  background-color: #07c160;
  color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.guide-content {
  flex: 1;
  padding: 30rpx;
}

.guide-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.item-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 10rpx;
  height: 30rpx;
  width: 8rpx;
  background-color: #07c160;
  border-radius: 4rpx;
}

.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.guide-footer {
  text-align: center;
  padding: 40rpx 0;
}

.footer-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.footer-text {
  font-size: 28rpx;
  color: #999;
}