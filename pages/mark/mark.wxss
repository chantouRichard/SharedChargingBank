/* pages/agreement/agreement.wxss */
.agreement-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

/* 顶部标题 */
.header {
  padding: 40rpx 0;
  text-align: center;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 内容区域（可滚动） */
.content {
  flex: 1;
  padding: 30rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section {
  margin-bottom: 40rpx;
}
.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.section-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 底部确认按钮 */
.footer {
  padding: 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}
.confirm-btn {
  width: 100%;
  height: 90rpx;
  line-height: 60rpx;
  background: #07C160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 12rpx;

  justify-content: center;
  align-items: center;
}
.confirm-btn:active {
  opacity: 0.9;
}