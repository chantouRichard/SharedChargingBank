/* pages/feedback/feedback.wxss */
/* 页面整体布局 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  background-color: #fef9e7;
}

/* 标题 */
.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 说明文本 */
.description {
  font-size: 30rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

/* 输入框容器 */
.input-box {
  width: 100%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

/* 输入框 */
textarea {
  width: 100%;
  height: 200rpx;
  font-size: 32rpx;
  color: #333;
  border: none;
  outline: none;
  resize: none;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  max-width: 600rpx;
  padding: 18rpx 0;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  background: linear-gradient(to right, #ffcc00, #ff9900);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease-in-out;
}

/* 按下动画 */
.submit-btn:active {
  transform: scale(0.96);
}
